{
  "name": "classnames-rainbow",
  "displayName": "ClassNames Rainbow",
  "description": "Gives rainbow colors to html class names to help distinguish them. Works with jsx, tsx etc.",
  "author": "Konstantin Kovar <mail@vomkonstant.in>",
  "version": "1.0.0",
  "license": "MIT",
  "repository": "https://github.com/Neugierdsnase/vscode_classnames_rainbow",
  "icon": "classnames-rainbow-logo.png",
  "publisher": "KonstantinKovar",
  "engines": {
    "vscode": "^1.63.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:html",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact",
    "onLanguage:vue",
    "onLanguage:svelte",
    "onLanguage:astro"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "ClassNames Rainbow",
      "properties": {
        "classnamesRainbow.colorIntensity": {
          "type": "number",
          "default": 5,
          "description": "Set the brightness of the rainbow colors from 1 to 10.",
          "minimum": 1,
          "maximum": 10
        },
        "classnamesRainbow.minimumClassListLength": {
          "type": "number",
          "default": 1,
          "description": "Set the minimum length of the class list for the extension to take effect.",
          "minimum": 1,
          "maximum": 20
        }
      }
    },
    "languages": [
      {
        "id": "html",
        "aliases": [
          "HTML",
          "html"
        ],
        "extensions": [
          ".html",
          ".htm"
        ]
      },
      {
        "id": "javascriptreact",
        "aliases": [
          "JSX",
          "jsx"
        ],
        "extensions": [
          ".jsx"
        ]
      },
      {
        "id": "typescriptreact",
        "aliases": [
          "TSX",
          "tsx"
        ],
        "extensions": [
          ".tsx"
        ]
      },
      {
        "id": "vue",
        "aliases": [
          "VUE",
          "vue"
        ],
        "extensions": [
          ".vue"
        ]
      },
      {
        "id": "svelte",
        "aliases": [
          "svelte"
        ],
        "extensions": [
          ".svelte"
        ]
      },
      {
        "id": "astro",
        "aliases": [
          "astro"
        ],
        "extensions": [
          ".astro"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "prepare": "husky install",
    "format": "prettier --write .",
    "format:thorough": "yarn run format && yarn run lint"
  },
  "lint-staged": {
    "*.ts, *.json": "yarn run format:thorough"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.63.0",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "@vscode/test-electron": "^2.0.3",
    "eslint": "^8.6.0",
    "glob": "^7.2.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.3",
    "mocha": "^9.1.3",
    "typescript": "^4.5.4"
  }
}
